<div class="response_wrap">
  <%= form_for(:response, url: result_path, html: {id: 'firm_response'}) do |f| %>
    <% if question.good_answers.count == 1 %>
    <div class="unique_response">
      <ul>
        <% answers.each do |a| %>
          <li><%= f.radio_button :answer_id, "#{a.id},#{a.wording}", {required: 'required'} %><%= a.wording %></li>
        <% end %>
      </ul>
    </div>
    <% else %>
    <div class="multiple_response">
      <ul>
        <% answers.each do |a| %>
          <li><%= f.check_box :answer_id, {:multiple => true}, "#{a.id},#{a.wording}", nil %> <%= f.label a.wording %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="question_submit_wrap">
      <%= f.hidden_field :question_id, value: question.id %>
      <div>
        <%= submit_tag "Validate", id: "btn_submit_response", class: "btn"%>
      </div>
    </div>
  <% end %>
</div>
